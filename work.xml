<tryton>
    <data>
        <record model="ir.ui.view" id="work_project_view_form">
            <field name="model">work.project</field>
            <field name="inherit" ref="work_project.work_project_view_form"/>
            <field name="name">work_project_form</field>
        </record>

        <record model="ir.action.act_window"
                id="act_work_project_from_purchases">
            <field name="name">Work Projects</field>
            <field name="res_model">work.project</field>
            <field name="domain">[('purchases', 'in', Eval('active_ids'))]</field>
        </record>

        <record model="ir.action.keyword"
                id="act_work_project_from_purchases_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">purchase.purchase,-1</field>
            <field name="action" ref="act_work_project_from_purchases"/>
        </record>

        <record model="ir.action.act_window"
                id="act_purchase_from_work_project">
            <field name="name">Purchases</field>
            <field name="res_model">purchase.purchase</field>
            <field name="domain">[('work_projects', 'in', Eval('active_ids'))]</field>
        </record>

        <record model="ir.action.keyword"
                id="act_purchase_from_work_project_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">work.project,-1</field>
            <field name="action" ref="act_purchase_from_work_project"/>
        </record>

    </data>
</tryton>
